<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apka1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.localhost.myapplication.apka1">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Výška v cm"
        android:ems="10"
        android:id="@+id/vstup_vyska"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Výška"
        android:layout_alignBaseline="@+id/vstup_vyska"
        android:layout_alignBottom="@+id/vstup_vyska"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="Výška:" />

    <Button
        android:text="Vypočítej"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:minHeight="55dip"
        android:minWidth="80dip"
        android:onClick="onButtonbmi (apka1)"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <TextView
        android:text="BMI:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:text="@string/hmotnost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        tools:text="Hmotnost:"
        android:layout_alignBaseline="@+id/vstup_hmotnost"
        android:layout_alignBottom="@+id/vstup_hmotnost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="..."
        android:ems="10"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/vstup_vyska"
        android:layout_alignEnd="@+id/vstup_vyska"
        android:layout_marginTop="61dp"
        android:id="@+id/vystup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Váha v kg"
        android:ems="10"
        android:id="@+id/vstup_hmotnost"
        android:layout_below="@+id/vstup_vyska"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
